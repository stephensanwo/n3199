{
  "app": {
    "name": "My Desktop App",
    "version": "1.0.0",
    "bundle_id": "com.example.desktopapp"
  },
  "window": {
    "title": "Simple C Desktop App",
    "width": 800,
    "height": 600,
    "min_width": 400,
    "min_height": 300,
    "center": true,
    "resizable": true,
    "minimizable": true,
    "maximizable": true,
    "closable": true,
    "frameless": false,
    "transparent": false
  },
  "menubar": {
    "enabled": true,
    "show_about_item": true,
    "show_preferences_item": true,
    "show_services_menu": false,
    "file_menu": {
      "enabled": true,
      "title": "File",
      "items": [
        {
          "title": "New",
          "shortcut": "cmd+n",
          "action": "new",
          "enabled": true,
          "separator_after": false
        },
        {
          "title": "Open...",
          "shortcut": "cmd+o",
          "action": "open",
          "enabled": true,
          "separator_after": false
        },
        {
          "title": "Save",
          "shortcut": "cmd+s",
          "action": "save",
          "enabled": true,
          "separator_after": true
        },
        {
          "title": "Close Window",
          "shortcut": "cmd+w",
          "action": "close_window",
          "enabled": true,
          "separator_after": false
        }
      ]
    },
    "edit_menu": {
      "enabled": true,
      "title": "Edit",
      "items": [
        {
          "title": "Undo",
          "shortcut": "cmd+z",
          "action": "undo",
          "enabled": true,
          "separator_after": false
        },
        {
          "title": "Redo",
          "shortcut": "shift+cmd+z",
          "action": "redo",
          "enabled": true,
          "separator_after": true
        },
        {
          "title": "Cut",
          "shortcut": "cmd+x",
          "action": "cut",
          "enabled": true,
          "separator_after": false
        },
        {
          "title": "Copy",
          "shortcut": "cmd+c",
          "action": "copy",
          "enabled": true,
          "separator_after": false
        },
        {
          "title": "Paste",
          "shortcut": "cmd+v",
          "action": "paste",
          "enabled": true,
          "separator_after": false
        }
      ]
    },
    "view_menu": {
      "enabled": true,
      "title": "View",
      "items": [
        {
          "title": "Zoom In",
          "shortcut": "cmd+plus",
          "action": "zoom_in",
          "enabled": true,
          "separator_after": false
        },
        {
          "title": "Zoom Out",
          "shortcut": "cmd+minus",
          "action": "zoom_out",
          "enabled": true,
          "separator_after": false
        },
        {
          "title": "Actual Size",
          "shortcut": "cmd+0",
          "action": "zoom_reset",
          "enabled": true,
          "separator_after": false
        }
      ]
    },
    "window_menu": {
      "enabled": true,
      "title": "Window",
      "items": [
        {
          "title": "Minimize",
          "shortcut": "cmd+m",
          "action": "minimize",
          "enabled": true,
          "separator_after": false
        },
        {
          "title": "Zoom",
          "shortcut": "",
          "action": "zoom_window",
          "enabled": true,
          "separator_after": false
        }
      ]
    },
    "help_menu": {
      "enabled": true,
      "title": "Help",
      "items": [
        {
          "title": "Documentation",
          "shortcut": "",
          "action": "show_help",
          "enabled": true,
          "separator_after": false
        }
      ]
    }
  },
  "macos": {
    "toolbar": {
      "enabled": true,
      "show_toggle_button": true,
      "left": {
        "buttons": [
          {
            "name": "Back",
            "icon": "chevron.left",
            "action": "toolbar_back_callback",
            "tooltip": "Go Back",
            "enabled": true
          },
          {
            "name": "Forward",
            "icon": "chevron.right",
            "action": "toolbar_forward_callback",
            "tooltip": "Go Forward",
            "enabled": true
          }
        ]
      },
      "middle": {
        "buttons": [
          {
            "name": "Refresh",
            "icon": "arrow.clockwise",
            "action": "toolbar_refresh_callback",
            "tooltip": "Refresh",
            "enabled": true
          },
          {
            "name": "Star",
            "icon": "star",
            "action": "toolbar_star_callback",
            "tooltip": "Add to Favorites",
            "enabled": true
          }
        ]
      },
      "right": {
        "buttons": [
          {
            "name": "Search",
            "icon": "magnifyingglass",
            "action": "toolbar_search_callback",
            "tooltip": "Search",
            "enabled": true
          },
          {
            "name": "Settings",
            "icon": "gear",
            "action": "toolbar_settings_callback",
            "tooltip": "Settings",
            "enabled": true
          },
          {
            "name": "Share",
            "icon": "square.and.arrow.up",
            "action": "toolbar_share_callback",
            "tooltip": "Share",
            "enabled": true
          }
        ]
      }
    },
    "show_title_bar": false,
    "sidebar": {
      "enabled": true,
      "title": "Navigation",
      "width": 250,
      "max_width": 400,
      "resizable": true,
      "collapsible": true,
      "start_collapsed": false,
      "items": [
        {
          "title": "Home",
          "action": "navigate_home",
          "enabled": true,
          "separator_after": false
        },
        {
          "title": "Documents",
          "action": "navigate_documents",
          "enabled": true,
          "separator_after": false
        },
        {
          "title": "Settings",
          "action": "navigate_settings",
          "enabled": true,
          "separator_after": true
        },
        {
          "title": "Help",
          "action": "show_help",
          "enabled": true,
          "separator_after": false
        }
      ]
    }
  },
  "development": {
    "debug_mode": true,
    "console_logging": true
  },
  "webview": {
    "enabled": true,
    "developer_extras": true,
    "javascript_enabled": true,
    "framework": {
      "build_command": "pnpm run build",
      "dev_command": "pnpm run dev",
      "dev_url": "http://localhost:5174",
      "build_dir": "dist",
      "dev_mode": true
    }
  }
}
